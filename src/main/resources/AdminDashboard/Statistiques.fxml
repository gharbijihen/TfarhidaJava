<AnchorPane prefHeight="854.0" prefWidth="1192.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controller.StatistiquesController">
    <children>
        <PieChart fx:id="pieChart" layoutX="30.0" layoutY="6.0" prefHeight="360.0" prefWidth="540.0" />

    </children>
    <VBox prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
