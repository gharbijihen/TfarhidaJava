        <WebView id="pane_top" fx:id="wv" layoutX="100.0" onMouseClicked="#tt" prefHeight="500.0" prefWidth="700.0" />
      <Button fx:id="closeButton" layoutX="797.0" layoutY="528.0" mnemonicParsing="false" onAction="#onClose" prefHeight="50.0" prefWidth="53.0" style="-fx-background-color: WHITE; -fx-background-radius: 100;" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <ImageView fitHeight="35.0" fitWidth="37.0" layoutX="805.0" layoutY="536.0">
         <image>
            <Image url="@images/bouton-fermer.png" />
         </image>
      </ImageView>
      <Button fx:id="weatherButton" layoutX="375.0" layoutY="525.0" mnemonicParsing="false" onAction="#openWeatherPage" prefHeight="57.0" prefWidth="145.0" style="-fx-background-radius: 100; -fx-background-color: #60CCEC;" text="Voir météo" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <graphic>
            <ImageView fitHeight="47.0" fitWidth="42.0">
               <image>
                  <Image url="@images/weather-forecast%20(1).png" />
               </image>
            </ImageView>
         </graphic></Button>
    </children>
