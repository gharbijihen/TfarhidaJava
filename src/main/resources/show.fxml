<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="568.0" prefWidth="817.0" style="-fx-background-color: rgb(255,255,255); -fx-padding: 20px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.esprit.controller.ShowMoyen">
    <children>
        <!-- BorderPane for Images -->
        <BorderPane layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="450.0" style="-fx-border-color: black; -fx-border-width: 2px;">
            <!-- Image -->
            <center>
                <ImageView fx:id="img" fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
                    <image></image>
                </ImageView>
            </center>
        </BorderPane>

        <!-- Labels -->
        <Label fx:id="TypeLabel" layoutX="670.0" layoutY="82.0" text="Type" style="-fx-font-size: 16px; -fx-text-fill: #333333;">
            <!-- Icône associée -->
            <graphic>
                <ImageView fitHeight="35.0" fitWidth="36.0" style="-fx-padding: 5px;">
                    <image>
                        <Image url="@images/font.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <Label fx:id="CapaciteLabel" layoutX="670.0" layoutY="169.0" text="Capacite" style="-fx-font-size: 16px; -fx-text-fill: #333333;">
            <!-- Icône associée -->
            <graphic>
                <ImageView fitHeight="43.0" fitWidth="47.0" style="-fx-padding: 5px;">
                    <image>
                        <Image url="@images/capacity.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <Label fx:id="LieuLabel" layoutX="670.0" layoutY="254.0" prefHeight="61.0" prefWidth="110.0" text="Lieu" style="-fx-font-size: 16px; -fx-text-fill: #333333;">
            <!-- Icône associée -->
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="47.0" style="-fx-padding: 5px;">
                    <image>
                        <Image url="@images/google-maps.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <Label fx:id="EtatLabel" layoutX="670.0" layoutY="352.0" text="Etat" style="-fx-font-size: 16px; -fx-text-fill: #333333;">
            <!-- Icône associée -->
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="47.0" style="-fx-padding: 5px;">
                    <image>
                        <Image url="@images/accepted.png" />
                    </image>
                </ImageView>
            </graphic>
        </Label>

        <!-- Button "retour" -->
        <Button text="Retour" layoutX="20" layoutY="520" onAction="#Retour" style="-fx-background-color: #317a32; -fx-text-fill: white;">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0">
                    <image>
                        <Image url="@images/previous.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</Pane>
